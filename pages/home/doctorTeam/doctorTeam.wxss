page,
.container{
  background: #F0F2F5;
}
.doctor-item{
  display: flex;
  padding: 10px;
  background: #F0F2F5;
  box-sizing: border-box;
}
.doctor-header{
  width: 180rpx;
  height: 180rpx;
  /* border: 1px solid #D9D9D9; */
  border-radius: 50%;
  display: block;
}
.doctor-header image{
  width: 100%;
  height: 100%;
  /* vertical-align: middle; */
}
.doctor-content{
  flex: 1;
  margin-left: 10px;
  padding: 10px 0;
}
.doctor-info-bar{
  top: 0px;
}
.doctor-name{
  color: #000;
  font-size: 36rpx;
}
.doctor-rank{
  color:#0080FF;
  font-size: 30rpx;
}
.doctor-good-at{
  margin-top: 10rpx;
  color: #737373;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 520rpx;
}
.title-top{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position:relative;
}
